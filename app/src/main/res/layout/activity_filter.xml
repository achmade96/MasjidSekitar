<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp"
    android:paddingRight="16dp"
    tools:context=".FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nama_masjid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Nama Masjid"
            android:textColor="#000000" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_input_masjid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nama_masjid"
            android:hint="Cari Masjid" />


        <TextView
            android:id="@+id/txt_lokasi_masjid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dropdown_masjid"
            android:layout_marginTop="5dp"
            android:text="Lokasi Masjid"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/dropdown_lokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_lokasi_masjid"
            android:layout_margin="10dp"
            android:entries="@array/lokasi_masjid" />

        <TextView
            android:id="@+id/txt_fasilitas_masjid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dropdown_lokasi"
            android:layout_marginTop="5dp"
            android:text="Fasilitas Masjid"
            android:textColor="#000000" />

        <CheckBox
            android:id="@+id/chbx_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_fasilitas_masjid"
            android:hint="Parkir Mobil" />

        <CheckBox
            android:id="@+id/chbx_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chbx_1"
            android:hint="Parkir Motor" />

        <CheckBox
            android:id="@+id/chbx_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chbx_2"
            android:hint="Air Conditioner" />

        <Button
            android:id="@+id/btn_filter_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chbx_3"
            android:layout_marginTop="30dp"
            android:background="@drawable/button_background"
            android:text="Filter"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

</RelativeLayout>